<div id="<%= dom_id brewery %>">
  <p>
    <h2><strong><%= brewery.name %></strong></h2>
    <i>Established in <%= brewery.year %></i>
    <p>Beers count: <%= brewery.beers.count %></p>
  </p>

  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer, class:"btn btn-primary" %>
    <% end %>
  </p>

  <p>
    <% if brewery.ratings.empty? %>
      Brewery has no rated beers!
    <% else %>
      Brewery has <%= pluralize(brewery.ratings.count, 'rating') %> with an average of <%= brewery.average_rating %>
    <% end %>
  </p>

</div>
