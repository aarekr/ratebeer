<h1>Users</h1>

<div id="users">
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Favorite beer</th>
      <th scope="col">Favorite style</th>
      <th scope="col">Favorite brewery</th>
      <th scope="col">Ratings</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.favorite_beer %></td>
        <td><%= user.favorite_style[user.id] %></td>
        <td><%= user.favorite_brewery[user.id] %></td>
        <td><%= user.ratings.count %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<% if current_user %>
  <% if current_user.admin == true %>
    <br><h3>USER STATUSES</h3>
    <div id="users">
      <% @users.each do |user| %>
        <p>
          <%= link_to(user.username, user) %>
          <% if user.active == true %>
            <span class="badge bg-primary">active</span>
          <% else %>
            <span class="badge bg-danger">closed</span>
          <% end %>
      <% end %>
    </div> <hr>
  <% end %>
<% end %>

<%= link_to "New user", new_user_path %>
